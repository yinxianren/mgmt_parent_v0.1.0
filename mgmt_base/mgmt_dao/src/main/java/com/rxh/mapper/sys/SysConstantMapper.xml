    </select>-->

    <!--根据groupCode查询对象数据 -->
    <select id="selectByConstant" parameterType="map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_constant
        where 1=1
        and group_code = #{groupCode}
        and first_value = #{firstValue}
    </select>

    <select id="selectByGroupNameForMapKeyFirstValue" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_constant
        WHERE group_code = #{groupName}
    </select>
    <select id="selectByGroupNameAndSortValueIsNotNULL" resultType="com.rxh.pojo.sys.SysConstant">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_constant
        WHERE group_code = #{groupName}
        AND sort_value !=0
    </select>
    <select id="getStateByProvince" resultType="com.rxh.pojo.sys.SysConstant">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_constant
        WHERE group_code ='Province'
        AND first_value = #{province}
    </select>
    <select id="getConstantByCurrency" resultType="com.rxh.pojo.sys.SysConstant">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_constant
        WHERE group_code ='Currency'
        AND first_value = #{currency}
    </select>

    <select id="getOneByFirstValueAndCode" resultType="com.rxh.pojo.sys.SysConstant">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_constant
        WHERE group_code =#{groupCode}
        AND first_value = #{firstValue}
    </select>

